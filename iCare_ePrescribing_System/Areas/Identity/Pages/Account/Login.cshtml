@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "LoginLayout";
}

<body class="align" align="center">

    <div class="login" >

        <header class="login__header">
            <h2>
                <svg class="icon">
                    <use xlink:href="#icon-lock" />
                </svg>Sign In
            </h2>
        </header>

        <form id="account"  class="login__form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label for="email">E-mail address</label>
                <input asp-for="Input.Email" type="email" id="email" name="email" placeholder="mail@address.com" aria-required="true">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div>
                <label for="password">Password</label>
                <input asp-for="Input.Password" type="password" id="password" name="password" placeholder="password">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div>
                <input id="login-submit" class="button" type="submit" value="Sign In">
            </div>
            <div style="text-align:center;">
                <a  class="btn btn-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </div>

        </form>

    </div>

    <svg xmlns="http://www.w3.org/2000/svg" class="icons">

        <symbol id="icon-lock" viewBox="0 0 448 512">
            <path d="M400 224h-24v-72C376 68.2 307.8 0 224 0S72 68.2 72 152v72H48c-26.5 0-48 21.5-48 48v192c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5 48-48V272c0-26.5-21.5-48-48-48zm-104 0H152v-72c0-39.7 32.3-72 72-72s72 32.3 72 72v72z" />
        </symbol>

    </svg>

</body>

