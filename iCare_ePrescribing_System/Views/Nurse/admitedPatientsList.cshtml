@model ICollection<iCare_ePrescribing_System.Models.Admission>

@{
    ViewData["Title"] = "AdmittedPatients";
    Layout = "_NursePharmaLayout";
}


<div class="card">
    <div class="card-body">
        <div class="card-title">
            <h5>Booked patients</h5>

        </div>
    </div>
    <div id="patiensRecords">
        <table class="table table-striped table-hover caption-top">
            <thead>
                <tr>
                    <th>Identity Number</th>
                    <th>First Name </th>
                    <th>surname </th>
                    <th>Ward Name </th>
                    <th>Bed No </th>
                    <th>Admission Date</th>
                    <th>Admission Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var admittedPatient in Model)
                {
                    <tr>
                        <td>@admittedPatient.Patient.IDNo</td>
                        <td>@admittedPatient.Patient.Name</td>
                        <td>@admittedPatient.Patient.Surname</td>
                        <td>@admittedPatient.Bed.Ward.Name</td>
                        <td>@admittedPatient.Bed.BedNo</td>
                        <td>@admittedPatient.AdmissionDate.ToShortDateString()</td>
                        <td>@admittedPatient.AdmissionStatus</td>


                        <td><a class="btn btn-primary" asp-area="" asp-controller="Nurse" asp-action="PatientProfile" asp-route-id="@admittedPatient.Patient.PatientId">Profile</a></td> 
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>