@using Microsoft.AspNetCore.Identity
@using iCare_ePrescribing_System.Data
@inject SignInManager<StaffMembers> SignInManager
@inject UserManager<StaffMembers> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                Manage Users
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" asp-controller="User" asp-action="AddUser">Register Staff</a></li>
                <li><a class="dropdown-item" asp-controller="User" asp-action="Index">Update Staff Profiles</a></li>
                <li><a class="dropdown-item" href="#">Something else here</a></li>
            </ul>
        </div>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" style="color:burlywood" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>
    }
</ul>