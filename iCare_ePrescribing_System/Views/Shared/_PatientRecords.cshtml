@model iCare_ePrescribing_System.ViewModels.Nurse.PatientRecordsViewModel

<table class="table table-striped table-hover caption-top">
    <thead>
        <tr>
            <th>Identity Number</th>
            <th>First Name </th>
            <th>surname </th>
            <th>Gender </th>
            <th>Date Of Birth </th>
            <th>Contact Number </th>
            <th>Home Address </th>
            <th>Admit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model.patients)
        {
            <tr>
                <td>@patient.IDNo</td>
                <td>@patient.Name </td>
                <td>@patient.Surname </td>
                <td>@patient.Gender </td>
                <td>@patient.DateOfBirth.ToShortDateString() </td>
                <td>@patient.ContactNumber </td>
                <td>@patient.HomeAddress</td>

                <td><a class="btn btn-primary" asp-area="" asp-controller="Nurse" asp-action="admitPatient" asp-route-id="@patient.PatientId">Admit</a></td>
            </tr>
            
        }
    </tbody>
</table>