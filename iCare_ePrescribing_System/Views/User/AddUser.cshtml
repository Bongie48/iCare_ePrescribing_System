<section id="wrapper">
<div class="container mt-3">
<form class="form-control border-primary" class="row g-3" asp-action="AddUser" style="background-color:whitesmoke">
    <div class="row jumbotron box8">
            <div class="col-sm-12 mx-t3 mb-4">
                <h2 class="text-center text-info">Staff Registration</h2>
            </div>
                @if (TempData["ErrorRole"] != null)
                {
                    <div class="alert alert-danger">
                        <strong>Note ! </strong>@TempData["ErrorRole"]
                    </div>
                }
                @if (TempData["Errorusername"] != null)
                {
                    <div class="alert alert-danger">
                        <strong>Note ! </strong>@TempData["Errorusername"]
                    </div>
                }
            <input type="hidden" asp-for="@Model.Id" />
            <div class="col-sm-6 form-group">
                <label for="name-f">First Name</label>
                <input asp-for="@Model.Name" type="text" class="form-control" placeholder="Enter employee first name." required>
            </div>
            <div class="col-sm-6 form-group">
                <label for="name-l">Last name</label>
                <input asp-for="@Model.Surname" type="text" class="form-control" placeholder="Enter employee surname." required>
            </div>
            <div class="col-sm-6 form-group">
                <label for="email">Email</label>
                <input asp-for="@Model.Email" type="email" class="form-control" placeholder="Enter your email." required>
            </div>
                <div class="col-sm-6 form-group">
                    <label>Cellphone Number</label>
                    <input asp-for="@Model.Number" type="number" class="form-control" placeholder="Enter Cellphone Number." minlength="10" maxlength="10" required>
                </div>
                <div class="col-sm-6 form-group">
                    <label>Date Of Birth</label>
                    <input asp-for="@Model.BirthDate" type="datetime-local" class="form-control" value="@DateTime.Now" required>
                </div>
                <div class="col-sm-6 form-group">
                    <label>Gender</label>
                    <select asp-for="@Model.Gender" class="form-control browser-default custom-select" required>
                        <option value="">--Select--</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="unspesified">Do not Specify</option>
                    </select>
                </div>
                <div class="col-sm-6 form-group">
                    <label>Health Council Registration Number</label>
                    <input asp-for="@Model.HealthCouncilRegistrationNumber" type="text" class="form-control" placeholder="Enter Health Council Registration Number." minlength="6" maxlength="6" required>
                </div>
                @for (var i = 0; i < Model.Roles.Count; i++)
                {
                    <div class="col-md-12">
                        @Html.CheckBoxFor(s=> Model.Roles[i].Selected )
                        @Html.HiddenFor(s=> Model.Roles[i].Value)
                        @Html.LabelFor(s=> Model.Roles[i].Selected, Model.Roles[i].Text, new {@class="form-check-label" })
                        @Html.HiddenFor(s=> Model.Roles[i].Text)
                    </div>
                }
    <span class="text-danger">@ViewBag.Message</span>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Register Employee</button>
    </div>
    </div>
</form>
</div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
